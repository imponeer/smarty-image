{
    "name": "imponeer/smarty-image",
    "description": "Smarty plugin that adds some image related template syntax enchantments",
    "type": "library",
    "require": {
        "php": "^8.3",
        "smarty/smarty": "^5.0",
        "intervention/image": "^3",
        "psr/cache": "^3.0",
        "ext-json": "*",
        "ext-gd": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Raimondas Rimkeviƒçius",
            "email": "github@mekdrop.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "Imponeer\\Smarty\\Extensions\\Image\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imponeer\\Smarty\\Extensions\\Image\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "smarty",
        "image-processing",
        "image",
        "smarty-plugins"
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "symfony/cache": "^7.0",
        "bentools/cartesian-product": "^2.0",
        "symfony/polyfill-php80": "^1.27",
        "symfony/dom-crawler": "^7.0",
        "squizlabs/php_codesniffer": "^3.7 || ^4.0",
        "phpstan/phpstan": "^2.0"
    },
    "scripts": {
        "test": "phpunit --stop-on-error --stop-on-failure",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse"
    }
}
